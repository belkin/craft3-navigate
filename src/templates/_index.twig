{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/studioespresso/navigate/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Navigate" %}
{% set createUrl = url('navigate/add') %}

{% block actionButton %}
    <div id="button-container">
        <div class="btngroup submit">
            <a class="btn submit add icon" href="{{ createUrl }}">
                {{ 'New navigation'|t }}
            </a>
        </div>
    </div>
{% endblock %}

{# The content of the CP Section#}
{% block content %}
    {% if navigations|length %}
        <table id="sections" class="data fullwidth collapsible">
            <thead>
            <tr><th scope="col">Name</th>
                <th scope="col">Handle</th>
                <th scope="col">Settings</th>
            </tr></thead>
            <tbody>
            {% for navigation in navigations %}
            <tr data-id="{{ navigation.id }}" data-name="{{ navigation.title }}">
                <th scope="row" data-title="Title"><a href="{{ url('navigate/edit/'~navigation.id) }}">{{ navigation.title }}</a></th>
                <td data-title="Handle"><code>{{ navigation.handle }}</code></td>
                <td data-title="Settings"><a href="{{ url('navigate/settings/'~navigation.id) }}" role="button"><span data-icon="settings"></span></a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

    {% else %}
        {{ 'No navigations found, click "New navigation" in the top right corner to get started'|t }}
    {% endif %}
{% endblock %}
